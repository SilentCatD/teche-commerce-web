<!DOCTYPE html>
<html lang="zxx">

<head>
    <title><%=title%></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <%-include('partials/head') %>
    <link rel="stylesheet" href="/user/css/checkout.css">
</head>

<body>
    <!-- Page Preloder -->
    <%-include('partials/preloader') %> 


    <!-- Humberger Begin -->
    <%-include('partials/humberger') %> 
    <!-- Humberger End -->

    <!-- Header Section Begin -->
    <%-include('partials/header') %> 
    <!-- Header Section End -->

    <!-- Hero Section Begin -->
    <%-include('items/hero/hero-without-banner') %>  
    <!-- Hero Section End -->

    <!-- Breadcrumb Section Begin -->
    <%- include('items/breadcrumb')%>

    <!-- Checkout Section Begin -->
    <section class="checkout spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h6><span class="icon_tag_alt"></span> Have a coupon? <a href="#">Click here</a> to enter your code
                    </h6>
                </div>
            </div>
            <div class="checkout__form">
                <h4>Billing Details</h4>
                <form action="#">
                    <div class="row">
                        <div class="col-lg-8 col-md-6">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Fist Name<span>*</span></p>
                                        <input id="firstName" type="text">
                                        <p class="text-danger" id="firstName-error"></p>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Last Name<span>*</span></p>
                                        <input id="lastName"  type="text">
                                        <p class="text-danger" id="lastName-error"></p>
                                    </div>
                                </div>
                            </div>
                            <div class="checkout__input">
                                <p>Country<span>*</span></p>
                                <input id="country"  type="text">
                                <p class="text-danger" id="country-error"></p>
                            </div>
                            <div class="checkout__input">
                                <p>Address<span>*</span></p>
                                <input id="address"  type="text" placeholder="Street Address" class="checkout__input__add">
                                <p class="text-danger" id="address-error"></p>
                            </div>
                            <div class="checkout__input">
                                <p>Town/City<span>*</span></p>
                                <input id="townCity" type="text">
                                <p class="text-danger" id="townCity-error"></p>
                            </div>
                            <div class="checkout__input">
                                <p>Postcode / ZIP<span>*</span></p>
                                <input id="postCode" type="text">
                                <p class="text-danger" id="postCode-error"></p>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        <p>Phone<span>*</span></p>
                                        <input id="phone" type="text">
                                        <p class="text-danger" id="phone-error"></p>
                                    </div>
                                </div>
                            </div>
                            <div class="checkout__input">
                                <p>Order notes</p>
                                <input id="note" type="text"
                                    placeholder="Notes about your order, e.g. special notes for delivery.">
                                <p class="text-danger" id="note-error"></p>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <div class="checkout__order">
                                <h4>Your Order</h4>
                                <div class="checkout__order__products">Products <span>Total</span></div>
                                <ul id="detail-cart-items">

                                </ul>
                                <div class="checkout__order__total">Total <span id="totalPrice">$750.99</span></div>
                                <div class="checkout__input__checkbox">
                                    <label for="acc-or">
                                        Create an account?
                                        <input type="checkbox" id="acc-or">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <p>Lorem ipsum dolor sit amet, consectetur adip elit, sed do eiusmod tempor incididunt
                                    ut labore et dolore magna aliqua.</p>
                                <div class="checkout__input__checkbox">
                                    <label for="payment">
                                        Check Payment
                                        <input type="checkbox" id="payment">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="checkout__input__checkbox">
                                    <label for="paypal">
                                        Paypal
                                        <input type="checkbox" id="paypal">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <button id="checkout" class="site-btn">PLACE ORDER</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <!-- Checkout Section End -->

    <!-- ref https://bbbootstrap.com/snippets/bootstrap-track-order-details-modal-56905740  -->

    <div class="modal fade" id="order-notificate" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body ">
                    <div class="text-right"> <i class="fa fa-close close" data-dismiss="modal"></i> </div>
                    <div class="px-4 py-5" id="modal-content">

                    </div>
                </div>
            </div>
        </div>
    </div>



    <!-- Footer Section Begin -->
    <%- include("partials/footer") %>

    <%-include('partials/script') %>
    <script src="/user/js/breadcrumb.js"></script>
    <script type='module' src="/user/js/header.js"></script>
    <script  type="module" src="/user/js/hero.js"></script>

    <script  type="module" src="/user/js/checkout.js"></script>

 

</body>

</html>