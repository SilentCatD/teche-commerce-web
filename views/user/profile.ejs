<!DOCTYPE html>
<html lang="en">

<head>
    <title>Teche Profile</title>
    <%-include('partials/head') %>
    <!-- Font awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous" />
</head>

<body>
    <!-- Page Preloder -->
    <%-include('partials/preloader') %>


        <!-- Humberger Begin -->
        <%-include('partials/humberger') %>

        <!-- Header Section Begin -->
        <%-include('partials/header') %>
        

        <div class="container bootstrap snippets bootdey">
              
            <div class="row">
              <!-- left column -->
              <div class="col-md-3">
                  <div class="text-center mb-3">
                  <img style="height: 250px; width: 250px; object-fit: contain;" id="userAvatar" src="https://firebasestorage.googleapis.com/v0/b/teche-commerce-a2c6a.appspot.com/o/images%2FdefaultUImg.png?alt=media&token=201eb321-6ba9-4589-8d98-2edb59d2e736" class="avatar img-circle img-thumbnail" alt="avatar">                    
                  <input accept="image/png,image/jpeg" type="file" class="form-control mt-3" id="userAvatarInput">
                  </div>
                  <div class="text-center">
                      <div class="btn btn-primary" id="avatarSubmit">Update User Image</div>
                  </div>
              </div>
              
              <!-- edit form column -->
              <div class="col-md-9 personal-info">
                <div class="alert alert-info">
                  <a class="panel-close close" onClick="$('.alert').hide()">X</a> 
                  This is an Use this to show important messages to the user.
                </div>
                <h5 class="text-info mb-1">Edit User Info</h3>
                <form class="form-horizontal" role="form">
                  <div class="form-group">
                    <label class="col-lg-3 control-label">Name:</label>
                    <div class="col-lg-8">
                      <input class="form-control" id="edit-name" type="text" value="">
                      <p id="edit-name-error" class="text-danger"></p>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-lg-3 control-label">Email:</label>
                    <div class="col-lg-8">
                      <input class="form-control" id="edit-email" type="text" value="3rd User From Facebook or Google">
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-lg-8">
                      <div id="edit-info-submit" class="btn btn-primary">Edit info</div>
                    </div>
                </div>

                  <h5 class="mt-5 mb-1 text-info">Edit User Password</h5>
                  <div class="form-group">
                    <div class="col-lg-8">
                      <div class="d-flex align-items-center input-field "> 
                          <input class="form-control password-input" type="password" placeholder="Password"  id="user-password">
                      </div>
                  </div>
                    <div class="col-lg-8">
                        <div class="d-flex align-items-center input-field "> 
                            <input class="form-control password-input" type="password" placeholder="New Password"  id="edit-user-password">
                        </div>
                        <p id="edit-password-error" class="text-danger"></p>
                    </div>
                </div>
                  <div class="form-group">
                    <div class="col-lg-8">
                      <div id="edit-password-submit" class="btn btn-primary">Change To New Password</div>
                    </div>
                </div>




                </form>
              </div>
          </div>
        </div>
        <hr>


        <!-- footer Section Begin -->
        <%-include('partials/footer') %>

        <%-include('partials/script') %>

        
        <script type="module" src="/user/js/header.js"></script>
        <script type="module" src="/user/js/profile.js"> </script>

    </body>
</html>
