<!DOCTYPE html>
<html lang="en">

    <head>
        <title><%=title%></title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <%-include('partials/head') %>
        <link rel="stylesheet" href="/user/css/order.css">

    </head>

<body>
    <!-- Page Preloder -->
    <%-include('partials/preloader') %> 


    <!-- Humberger Begin -->
    <%-include('partials/humberger') %> 
    <!-- Humberger End -->

    <!-- Header Section Begin -->
    <%-include('partials/header') %> 
    <!-- Header Section End -->

    <!-- Hero Section Begin -->
    <%-include('items/hero/hero-without-banner') %>  
    <!-- Hero Section End -->

    <!-- Breadcrumb Section Begin -->
    <%- include('items/breadcrumb') %>
    <!-- Breadcrumb Section End -->

    <!-- Product Section Begin -->
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-8">
                    <div class="filter__item">
                        <div class="row">
                            <div class="col-lg-5 col-md-4">
                                <div class="filter__sort">
                                    <span>Status</span>
                                    <select id="sortSelect">
                                        <option value="">All</option>
                                        <option value="new">Newest</option>
                                        <option value="processing">Processing</option>
                                        <option value="shipping">Shipping</option>
                                        <option value="completed">Completed</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-5 col-md-4">
                                <div class="filter__sort">
                                    <span>Order By</span>
                                    <select id="orderByTime">
                                        <option value="desc">Newest</option>
                                        <option value="asc">Oldest</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-4">
                                <div class="filter__found">
                                    <h6><span id="total-items-found">x</span> Order Found</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" id="order-list">
                    </div>
                    <div id="pagination-section" class="product__pagination">
                    </div>
                </div>      
            </div>
        </div>
    </section>
    <!-- Product Section End -->



    <!-- https://bbbootstrap.com/snippets/bootstrap-tracking-order-purchase-reciept-progress-86201225 -->

    <div class="modal fade" id="order-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Are you sure</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
               
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary close" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>

    <!-- Footer Section Begin -->
    <%- include("partials/footer") %>
    <%-include('partials/script') %>

    <script src="/user/js/breadcrumb.js"></script>
    <script type='module' src="/user/js/header.js"></script>
    <script type="module" src="/user/js/hero.js"></script>
    <script type="module" src="/user/js/order.js"></script>



    <!-- Footer Section End -->


</body>

</html>