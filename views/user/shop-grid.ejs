<!DOCTYPE html>
<html lang="en">

    <head>
        <title><%=title%></title>
        <%-include('partials/head') %>
    </head>

<body>
    <!-- Page Preloder -->
    <%-include('partials/preloader') %> 


    <!-- Humberger Begin -->
    <%-include('partials/humberger') %> 
    <!-- Humberger End -->

    <!-- Header Section Begin -->
    <%-include('partials/header') %> 
    <!-- Header Section End -->

    <!-- Hero Section Begin -->
    <%-include('items/hero/hero-without-banner') %>  
    <!-- Hero Section End -->

    <!-- Breadcrumb Section Begin -->
    <%- include('items/breadcrumb') %>
    <!-- Breadcrumb Section End -->

    <!-- Product Section Begin -->
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-5">
                    <div class="sidebar">
                        <div class="sidebar__item">
                            <h4>Categories</h4>
                            <% -include('items/categories/category-list') %>
                        </div>
                        <div class="sidebar__item">
                            <h4>Price</h4>
                            <div class="price-range-wrap">
                                <div class="price-range ui-slider ui-corner-all ui-slider-horizontal ui-widget ui-widget-content"
                                    data-min="0" data-max="2000">
                                    <div class="ui-slider-range ui-corner-all ui-widget-header"></div>
                                    <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
                                    <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
                                </div>
                                <div class="range-slider">
                                    <div class="price-input">
                                        <input type="text" id="minamount">
                                        <input type="text" id="maxamount">
                                    </div>
                                </div>
                            </div>
                        </div>
            
                        <div class="sidebar__item sidebar__item__color--option">
                            <h4>Brands</h4>
                            <% for( let index = 0; index < brands.length; index++ ) { %>
                                <div class="sidebar__item__size filter_checkbox">
                                    <label for="<%= brands[index].id %>">
                                        <%= brands[index].name %> 
                                        <input type="checkbox" id="<%= brands[index].id %>" class="brand">
                                    </label>
                                </div>
                            <% } %>
                        </div>
                        <div class="sidebar__item sidebar__item__color--option">
                            <h4>Categories</h4>
                            <% for( let index = 0; index < categories.length; index++ ) { %>
                                <div class="sidebar__item__size filter_checkbox">
                                    <label for="<%= categories[index].id %>">
                                        <%= categories[index].name %> 
                                        <input type="checkbox" id="<%= categories[index].id %>" class="category">
                                    </label>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9 col-md-7">
                    <div class="product__discount">
                        <div class="section-title product__discount__title">
                            <h2>Sale Off</h2>
                        </div>
                        <div class="row">
                        </div>
                    </div>
                    <div class="filter__item">
                        <div class="row">
                            <div class="col-lg-4 col-md-5">
                                <div class="filter__sort">
                                    <span>Sort By</span>
                                    <select id="sortSelect">
                                        <option value="createdAt">Newest</option>
                                        <option value="price">Price</option>
                                        <option value="rateAverage">Price</option>
                                        <option value="viewCount">View</option>
                                        <option value="buyCount">Bought</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-5">
                                <div class="filter__sort">
                                    <span>Order By</span>
                                    <select id="orderBySelect">
                                        <option value="desc">Descending</option>
                                        <option value="asc">Ascending</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4">
                                <div class="filter__found">
                                    <h6><span id="total-items-found">16</span> Products found</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" id="product-list">
                    </div>
                    <div class="product__pagination" id="pagination">
                    </div>
                </div>      
            </div>
        </div>
    </section>
    <!-- Product Section End -->

    <!-- Footer Section Begin -->
    <%- include("partials/footer") %>
    <%-include('partials/script') %>

    <script src="/user/js/breadcrumb.js"></script>
    <script type='module' src="/user/js/header.js"></script>
    <script  type="module" src="user/js/hero.js"></script>
    <script type="module" src="/user/js/shop-grid.js"></script>


    <!-- Footer Section End -->


</body>

</html>