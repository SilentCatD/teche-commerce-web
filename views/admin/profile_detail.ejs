

<!DOCTYPE html>
<html lang="en">

<head>
    <%-include('partials/head.ejs', {title: title}) %> 

    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"> -->
</head>

<body>



    <div class="container-xxl position-relative bg-white d-flex p-0">
        <!-- Spinner Start -->
        <!-- Spinner End -->


        <!-- Sidebar Start -->
        <%-include('partials/sidebar.ejs', {active: active}) %> 
        <!-- Sidebar End -->


        <!-- Content Start -->
        <div class="content">
        <!-- Navbar Start -->
        <%-include('partials/navbar.ejs') %> 
        <!-- Navbar End -->


        <!-- Product Search Start-->
        <div class="container-fluid pt-4 px-4">
            <div class="row bg-light rounded align-items-center justify-content-center mx-0 p-4">
                    <!-- left column -->
                <div class="col-md-3">
                    <div class="text-center mb-3">
                    <img style="height: 250px; width: 250px; object-fit: contain;" id="userAvatar" src="<%=user.avatar?  user.avatar : 'https://firebasestorage.googleapis.com/v0/b/teche-commerce-a2c6a.appspot.com/o/images%2FdefaultUImg.png?alt=media&token=201eb321-6ba9-4589-8d98-2edb59d2e736' %>" class="avatar img-circle img-thumbnail" alt="avatar">                    
                    </div>
                </div>
                
                <!-- edit form column -->
                <div class="col-md-9 personal-info">
                    <h5 class="text-info mb-1"> User Info</h3>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">ID:</label>
                        <div class="col-lg-8">
                        <input class="form-control" id="edit-email" type="text" value="<%= user.id %> " disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-3 control-label">Name:</label>
                        <div class="col-lg-8">
                        <input class="form-control" id="edit-name" type="text" value="<%= user.name %> " disabled>
                        </div>
                    </div>
                   
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Email:</label>
                        <div class="col-lg-8">
                        <input class="form-control" id="edit-email" type="text" value="<%= user.email %> " disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-3 control-label">Status:</label>
                        <div class="col-lg-8">
                        <input class="form-control" id="edit-email" type="text" value="<%= user.status %> " disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-3 control-label">Role:</label>
                        <div class="col-lg-8">
                        <input class="form-control" id="edit-email" type="text" value="<%= user.role %> " disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-3 control-label">Created:</label>
                        <div class="col-lg-8">
                        <input class="form-control" id="edit-email" type="text" value="<%= user.createdAt %> " disabled>
                        </div>
                    </div>
                    

                </div>
            </div>
        </div>
        <!-- Product Search End-->
        <!-- Footer Start -->
        <%-include('partials/footer.ejs') %>
        <!-- Footer End -->
        <!-- Content End -->
        <!-- Back to Top -->
        <%-include('partials/back_to_top_btn.ejs') %>
       
        <!-- JavaScript Libraries -->
        <%-include('partials/include_js.ejs') %> 
        <script src="https://unpkg.com/validator@latest/validator.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script type="module" src="/admin/js/sidebar.js"></script>
        <script type="module" src="/admin/js/navbar.js"></script>

</body>

</html>